{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <h1>Liste des articles</h1>

    <div class="article-list">
        {% if articles is defined and articles is not empty %}
        {% for article in articles %}
            <div class="article-item">
                <div class="bloc-list">
                    {% for bloc in article.blocs %}
                        <div class="bloc-item">
                            {% if bloc.title is not null %}
                                <a href="{{ path('article', {'id': article.id}) }}"><h2 class="titleArticles">{{ bloc.title }}</h2></a>
                            {% endif %}
                        </div>
                    {% endfor %}
                    <p><strong>{{ article.name }}</strong> By {{ article.author.prenom }} {{ article.author.nom }}</p>
                </div>
            </div>
        {% endfor %}
        {% endif %}
    </div>
{% endblock %}